<%= render "profiles/header", current: "basic", user: @user %>

<%= bootstrap_horizontal_form_for @user, url: { action: :update } do |f| %>
  <%= f.input :email do %>
    <div class="form-control-plaintext"><%= f.object.email %></div>
  <% end %>
  <%= f.input :name %>
  <%= f.input page_i18n('avatar') do %>
    <%= image_tag f.object.avatar_url, width: 100 %>
    <%= edit_link 'https://gravatar.com', target: "_blank" %>
  <% end %>

  <%= f.input :current_password %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <hr>

  <%= f.actions_content do %>
    <%= ok_url_tag %>
    <%= f.submit class: "btn btn-primary" %>
    <%= cancel_link root_path, class: "btn btn-link" %>
  <% end %>
<% end %>
