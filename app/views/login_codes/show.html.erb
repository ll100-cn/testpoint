<div class="login-body d-flex flex-column-fluid align-items-stretch justify-content-center">
  <div class="login-body d-flex flex-column-fluid align-items-stretch justify-content-center">
    <div class="container row">
      <div class="col-lg-6 p-3 p-md-15">
        <div class="card">
          <div class="card-body">
            <div class="card-title">
              <h3><%= t(".sign_in", scope: "devise") %></h3>
            </div>
            <%= bootstrap_vertical_form_for resource, url: verify_user_login_code_path(@login_code) do |f| %>
              <%= render 'in_form_flash' %>
              <%= f.input :email, label: false, placeholder: "邮箱" %>
              <%= f.input :login_code, label: false, placeholder: "验证码" %>
              <%= f.input :remember_me, as: :boolean %>
              <%= f.submit t(".sign_in", scope: "devise"), class: "btn btn-primary mr-3" %>
              <%= link_to t(".resend_code", scope: "devise"), resend_user_login_code_path(@login_code) %>
            <% end %>
          </div>

        </div>

      </div>
      <div class="col-lg-6 bgi-size-contain bgi-no-repeat bgi-position-y-center bgi-position-x-center min-h-150px mt-10 m-md-0" style="background-image: url(<%= asset_pack_path('media/images/bg_icon.svg') %>)"></div>
    </div>
  </div>
</div>
