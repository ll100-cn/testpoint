<%= bootstrap_horizontal_form_for component do |f| %>
  <%= f.input :name %>
  <% without_ids = f.object.new_record? ? nil : f.object.subtree %>
  <%= f.input :parent_id, collection: Component.where.not(id: without_ids).ranked %>

  <hr>

  <%= f.actions_content do %>
    <%= ok_url_tag %>
    <%= f.submit class: "btn btn-primary" %>
    <%= cancel_link [ ::TestCase, component_id: component.id ], class: "btn btn-link" %>
  <% end %>
<% end %>
