json = comment.slice(
  :id, :content, :created_at, :updated_at, :issue_id,
  :last_edited_at, :member_id, :comment_id, :collapsed, :display
)

if comment.member
  json[:member] = render_schema "schema://svc/member", member: comment.member
end

if comment.attachments
  json[:attachments] = render_schema("schema://svc/attachment", collection: comment.attachments, as: :attachment)
end

json
