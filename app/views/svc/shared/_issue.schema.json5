{
  $schema: "http://json-schema.org/draft-06/schema#",
  $id: "schema://svc/issue",
  type: "object",
  properties: {
    id: { type: "integer" },
    title: { type: "string" },
    content: { type: ["string", "null"] },
    state: { type: "string" },
    state_text: { type: "string" },
    created_at: { type: "string", format: "date-time" },
    updated_at: { type: "string", format: "date-time" },
    project_id: { type: "integer" },
    last_edited_at: { type: ["string", "null"], format: "date-time" },
    creator_id: { type: "integer" },
    assignee_id: { type: ["integer", "null"] },
    priority: { type: "string" },
    priority_text: { type: "string" },
    task_id: { type: ["integer", "null"] },
    category_id: { type: ["integer", "null"] },
    archived_at: { type: ["string", "null"], format: "date-time" },
    milestone_id: { type: ["integer", "null"] },
    subscribed_users: { type: ["array", "null"] },
    stage: { type: "string" },
    stage_text: { type: "string" },
    creator: { $ref: "schema://svc/member" },
    task: { $ref: "schema://svc/task" },
    milestone: { $ref: "schema://svc/milestone" },
    assignee: { $ref: "schema://svc/member" },
    category: { $ref: "schema://svc/category" },
    project_name: { type: "string" }
  },
  required: [ "id", "title", "state", "state_text", "created_at", "updated_at", "project_id", "creator_id", "priority", "priority_text", "stage", "stage_text", "creator", "project_name" ]
}