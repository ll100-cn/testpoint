<div class="card app-card-main">
  <div class="card-header bg-white d-flex">
    <h2><%=h Project %><%= title(page_i18n :index, model_name: h(Member)) %></h2>
    <div class="actions ms-auto">
      <%= new_button [@project, :member] if can? :new, Member %>
    </div>
  </div>

  <div class="card-body">
    <table class="table">
      <colgroup>
        <col width="20%">
        <col width="20%">
        <col width="20%">
        <col width="20%">
        <col>
      </colgroup>
      <thead>
      <tr>
        <th><%= sort_link @q, :id %></th>
        <th><%=h Member, :name %></th>
        <th><%= sort_link @q, :user_email %></th>
        <th><%= sort_link @q, :role %></th>
        <th><%= sort_link @q, :receive_mail %></th>
        <th><%=page_i18n :actions %></th>
      </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td><%= member.name %></td>
            <td><%= member.user.email %></td>
            <td><%= member.role_text %></td>
            <td><%= member.receive_mail ? "开启" : "关闭" %></td>
            <td>
              <%= edit_link [@project, member] %>
              <%= destroy_link [@project, member] %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <nav class="table-pagination">
      <%= paginate @members %>
    </nav>
  </div>

</div>
