<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @task.test_case.title %></h5>
      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= bootstrap_vertical_form_for [@project, @plan, @task], html: { id: "uploadAttachmentForm" } do |f| %>
        <%= f.input :state, as: :hidden, input_html: { value: :failure } %>
        <%= f.input :message, input_html: { class: 'markdown-field' } %>
        <%= render "attachments/upload_area.html.erb", attachments: f.object.attachments %>
        <hr>
        <div class="text-right mb-2">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= action_i18n :cancel %></button>
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
