<div class="modal-header">
  <h5 class="modal-title"><%= page_i18n(:index, model_name: h(TestCaseLabel)) %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <table class="table">
    <colgroup>
      <col width="20%">
      <col width="30%">
      <col width="20%">
      <col>
    </colgroup>
    <thead>
    <tr>
      <th><%=h TestCaseLabel, :name %></th>
      <th><%=h TestCaseLabel, :description %></th>
      <th><%=h TestCaseLabel, :test_cases %></th>
      <th><%= page_i18n :actions %></th>
    </tr>
    </thead>
    <tbody>
      <% @test_case_labels.each do |label| %>
        <tr>
          <td><%= label.name %></td>
          <td><%= label.description %></td>
          <td><%= label.test_cases.count %></td>
          <td>
            <%= edit_link [@project, label], data: { remote: true, type: :xhrml, target: ".modal-content" } %>
            <%= destroy_link [@project, label] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="modal-footer">
  <%= new_button [@project, :test_case_label], data: { remote: true, type: :xhrml, target: ".modal-content" } %>
  <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= action_i18n :close %></button>
</div>
