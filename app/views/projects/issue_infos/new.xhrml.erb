<%= bootstrap_horizontal_form_for [@project, @issue, @issue_info], remote: true, data: { target: ".modal-content", type: "xhrml" } do |f| %>
  <div class="modal-header">
    <h5 class="modal-title">选择问题模版</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <%= f.input :template_id, collection: @project.issue_templates %>
    <%= f.input :remark %>
  </div>
  <div class="modal-footer x-spacer-2">
    <%= f.submit class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= action_i18n :close %></button>
  </div>
<% end %>
