<h5><%=h Issue, attribute_name %></h5>
<%= bootstrap_vertical_form_for [@project, @issue], defaults: { label: false, input_html: { class: "form-control-sm" }, wrapper_html: { class: "mb-2" } } do |f| %>
  <%= yield(f) %>
  <%= f.submit class: "btn btn-sm mr-1 btn-primary" %>
  <%= link_to action_i18n(:cancel), "javascript:void(0)", data: { action: "click->inline-edit#restore" }, class: "btn btn-sm btn-secondary text-muted" %>
<% end %>
