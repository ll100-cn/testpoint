<span class="text-info"><%=h Issue, activity.property.to_sym %></span>
<% if activity.before_value? %>
  <% before_value = Member.find(activity.before_value).smart_name %>
  <span class="text-primary">从 <%= before_value %> </span><span>修改为</span>
<% else %>
  <span>修改为</span>
<% end %>

<% if activity.after_value? %>
  <span class="text-primary"><%= Member.find(activity.after_value).smart_name %></span>
<% else %>
  <span>无</span>
<% end %>
