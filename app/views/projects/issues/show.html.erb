<div class="page-header">
  <h2><%= @issue.title %></h2>
  <div class="actions ml-auto">
    <%= edit_link [:edit, @project, @issue] if can? :update, @issue %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <div class="d-flex align-items-start">
        <%= image_tag @issue.creator.avatar_url, width: 60, class: "rounded-circle" %>
        <div class="col pr-0">
          <div class="card">
            <div class="card-header">
              <%= @issue.creator.name %>
              <span class="text-muted float-right"><%= time_ago_in_words(@issue.created_at) %></span>
            </div>
            <div class="card-body">
              <div class="no-margin-bottom">
                <%= render "shared/page_content", content: @issue.content %>
                <%= render "shared/attachments_box", attachmentable: @issue %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex mb-4 border-bottom" style="padding-left: 60px;">
        <div class="col">
          <div class="border-left ml-4 p-3 pr-0">
            <div class="no-margin-bottom">
              <% @issue.tasks.ranked.each do |task| %>
                <%= render "shared/card_issue_task", task: task %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <% @issue.comments.history.each do |comment| %>
        <%= render "projects/comments/comments", comment: comment %>
      <% end %>

      <%= render "projects/comments/form", issue: @issue if can? :create, Comment %>

    </div>
    <div class="col-sm-3">
      <h5><%=h Issue, :created_at %></h5>
      <span><%=l @issue.created_at, format: :long %></span>

      <hr>

      <% form = capture do %>
        <%= render layout: "attribute_inline_form", locals: { attribute_name: :state } do |f| %>
          <%= f.input :state, collection: Issue.state.options %>
        <% end %>
      <% end %>

      <%= render layout: "attribute_info", locals: { template: form, attribute_name: :state } do %>
        <span class="<%= issue_state_class_name(@issue.state, :text)%>"><%= @issue.state.text %></span>
      <% end %>

      <hr>

      <% form = capture do %>
        <%= render layout: "attribute_inline_form", locals: { attribute_name: :assignee_id } do |f| %>
          <%= f.input :assignee_id, collection: User.all.map{ |u| [u.name, u.id] } %>
        <% end %>
      <% end %>

      <%= render layout: "attribute_info", locals: { template: form, attribute_name: :assignee_id } do %>
        <% if @issue.assignee %>
          <%= image_tag current_user.avatar_url, height: 20, class: "rounded-circle" %>
          <span class="badge mb-1"><%=@issue.assignee.name %></span>
        <% end %>
      <% end %>

      <hr>

      <% form = capture do %>
        <%= render layout: "attribute_inline_form", locals: { attribute_name: :label_ids } do |f| %>
          <%= f.input :label_ids, collection: @project.labels, input_html: { multiple: true, class: "form-control-sm select2-field" } %>
        <% end %>
      <% end %>

      <%= render layout: "attribute_info", locals: { template: form, attribute_name: :label_ids } do %>
        <% @issue.labels.each do |label| %>
          <%= label_tag label, label.name, class: "mb-1 d-block text-left" %>
        <% end %>
      <% end %>

      <hr>

      <% form = capture do %>
        <%= render layout: "attribute_inline_form", locals: { attribute_name: :milestone_id } do |f| %>
          <%= f.input :milestone_id, collection: @project.milestones %>
        <% end %>
      <% end %>

      <%= render layout: "attribute_info", locals: { template: form, attribute_name: :milestone_id } do %>
        <% if @issue.milestone %>
          <div class="d-flex align-items-center">
            <div class="progress flex-1">
              <% total = @issue.milestone.issues.count %>
              <% finished_issue = @issue.milestone.issues.where(state: "solved").count %>
              <div class="progress-bar bg-success" style="width: <%= 100 * finished_issue / total %>%"></div>
              <span class="progress-text"><%= @issue.milestone.title %></span>
            </div>
            <span class="badge text-right"><%= 100 * finished_issue / total %>%</span>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
