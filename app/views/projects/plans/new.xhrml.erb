<div data-controller="form-toggle">
  <%= bootstrap_horizontal_form_for [@project, @plan], data: { remote: true, type: :xhrml, target: ".modal-content" } do |f| %>
    <div class="modal-header">
      <h5 class="modal-title"><%= page_i18n :new, model_name: h(@plan) %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= render "inputs.html", f: f %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= action_i18n :close %></button>
    </div>
  <% end %>
</div>
