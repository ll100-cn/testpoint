<%= bootstrap_horizontal_form_for [@project, @plan], data: { remote: true, type: :xhrml, target: ".modal-content" } do |f| %>
  <div class="modal-header">
    <h5 class="modal-title"><%= page_i18n :new, model_name: h(@plan) %></h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <%= render template: "projects/plans/_inputs", formats: [ :html ], locals: { f: f } %>
  </div>
  <div class="modal-footer x-spacer-2">
    <%= f.submit class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= action_i18n :close %></button>
  </div>
  <% end %>
