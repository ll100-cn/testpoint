<div class="card">
  <div class="card-header bg-white"><%= page_i18n :edit, model_name: h(@plan) %></div>

  <%= bootstrap_horizontal_form_for [@project, @plan] do |f| %>
    <div class="card-body">
      <%= render "inputs.html", f: f %>
    </div>
    <div class="card-footer bg-white">
      <div class="d-flex justify-content-between">
        <div>
          <%= destroy_button [@project, @plan] if can? :destroy, @plan %>
        </div>
        <div>
          <%= link_to action_i18n(:cancel), project_plan_path(@project, @plan), class: "btn btn-secondary" %>
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
