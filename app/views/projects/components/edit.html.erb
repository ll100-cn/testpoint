<div class="page-header">
  <h2><%= page_i18n :edit, model_name: h(@component) %></h2>
  <div class="actions ml-auto">
    <%= destroy_link [ @project, @component ], class: "btn btn-outline-danger btn-sm" if can? :delete, @component %>
  </div>
</div>

<%= bootstrap_horizontal_form_for [@project, @component] do |f| %>
  <%= render "form", f: f %>
<% end %>
