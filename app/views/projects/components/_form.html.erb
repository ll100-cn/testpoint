<%= f.input :name %>
<% without_ids = f.object.new_record? ? nil : f.object.subtree %>
<%= f.input :parent_id, collection: f.object.project.components.available.where.not(id: without_ids).ranked %>

<hr>

<%= f.actions_content do %>
  <%= ok_url_tag %>
  <%= f.submit class: "btn btn-primary" %>
  <%= cancel_link [f.object.project, ::TestCase, component_id: f.object.id ], class: "btn btn-link" %>
<% end %>
