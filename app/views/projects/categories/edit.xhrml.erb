<%= bootstrap_horizontal_form_for [@project, @category], remote: true, data: { target: ".modal-content", type: "xhrml" },
    defaults: { wrapper_html: { class: "ms-0" }, legend_tag_html: { class: "text-end", style: "width: 8rem;"  }, label_wrapper_html: { class: "text-end", style: "width: 8rem;"  }, content_html: { class: "col" } } do |f| %>
  <div class="modal-header">
    <h5 class="modal-title"><%= page_i18n :edit, model_name: h(@category) %></h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :color, as: :color_picker %>
  </div>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= action_i18n :close %></button>
  </div>
<% end %>
