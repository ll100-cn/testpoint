<div class="modal-header">
  <h5 class="modal-title"><%= @task.test_case.title %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="alert alert-info">
        <%= @task.test_case.content %>
      </div>
      <p>Current state: <%= @task.state.text %></p>
    </div>
  </div>
</div>
<div class="modal-footer">
  <% data = { remote: true, target: "#uploadAttachmentsModal", type: :xhrml } %>
  <%= link_to "Pass", [@plan, @task, task: { state: :pass }], method: :patch, class: "btn btn-success" %>
  <%= link_to "Failure", upload_attachment_plan_task_path(@plan, @task), data: data, class: "btn btn-danger" %>
</div>
