<% data = { target: "#relate-issue", type: :xhrml } %>
<%= bootstrap_inline_form_for @task, url: [@plan, @task], html: { remote: true, data: data } do |f| %>
  <%= f.input :issue_id %>
  <%= f.submit "Relate", class: "btn btn-primary ml-2" %>
  <%= link_to "Cancel", [@plan, @task], data: data, remote: true, method: :patch, class: "btn btn-secondary ml-2" %>
<% end %>
