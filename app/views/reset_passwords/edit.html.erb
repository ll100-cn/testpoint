<div class="row justify-content-center mt-5">
  <div class="col-sm-10 col-md-7 col-lg-6 col-xl-5">
    <div class="card">
      <h3 class="card-header"><%= t("change_your_password", scope: "devise.passwords.edit") %></h3>
      <%= bootstrap_vertical_form_for resource, as: resource_name, url: reset_password_path, html: { method: :put } do |f| %>
        <div class="card-body">
          <div class="no-margin-bottom">
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password, label: t("new_password", scope: "devise.passwords.edit"), required: true, autofocus: true, hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: t("confirm_new_password", scope: "devise.passwords.edit"), required: true %>
            </div>
          </div>
        </div>

        <div class="card-footer d-flex align-items-center">
          <div class="actions mr-auto">
            <%= f.submit t("change_my_password", scope: "devise.passwords.edit"), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
