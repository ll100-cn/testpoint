<!DOCTYPE html>
<html>
  <head>
    <title>Testpoint</title>
    <%= csrf_meta_tags %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-dark bg-dark mb-4">
      <div class="container">
        <%= link_to "Testpoint", root_path, class: "navbar-brand" %>
        <div class="navbar-nav-scroll">
          <ul class="navbar-nav flex-row">
            <li class="nav-item">
              <%= link_to "Cases", [ ::TestCase ], class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Plans", [ Plan ], class: "nav-link" %>
            </li>
          </ul>
        </div>
        <ul class="navbar-nav flex-row ml-md-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= link_to current_user.email, "#", class: "nav-link dropdown-toggle", data: { toggle: "dropdown" } %>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to "sign out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
