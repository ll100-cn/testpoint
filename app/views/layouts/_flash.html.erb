<% if flash.any? %>
  <% flash.to_hash.each do |key, value| %>
    <% if value.present? %>
      <div class="alert alert-dismissable alert-<%= bootstrap_flash_class_for(key) %>">
        <button class="close" data-dismiss="alert">x</button>
        <%= value %>
      </div>
     <% end %>
  <% end %>
<% end %>
