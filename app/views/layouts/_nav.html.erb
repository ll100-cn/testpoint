<nav class="navbar navbar-expand navbar-dark flex-column flex-md-row bg-dark sticky-top tp-navbar">
  <%= link_to "Testpoint", root_path, class: "navbar-brand" %>
  <div class="navbar-nav-scroll">
    <%= fume_nav current do |n| %>
      <ul class="navbar-nav flex-row">
        <%= n.li_tag "cases", class: "nav-item" do %>
          <%= link_to t('views.navbar.cases'), [::TestCase], class: "nav-link" %>
        <% end %>
        <%= n.li_tag "plans", class: "nav-item" do %>
          <%= link_to t('views.navbar.plans'), [Plan], class: "nav-link" %>
        <% end %>
        <%= n.li_tag "Issues", class: "nav-item" do %>
          <%= link_to t('views.navbar.issues'), [Issue], class: "nav-link" %>
        <% end %>
        <%= n.li_tag "Users", class: "nav-item" do %>
          <%= link_to t('views.navbar.users'), [User], class: "nav-link" %>
        <% end %>
      </ul>
    <% end %>
  </div>

  <ul class="navbar-nav flex-row ml-md-auto">
    <% if user_signed_in? %>
      <li class="nav-item dropdown">
         <%= link_to current_user.name, "#", class: "nav-link dropdown-toggle", data: { toggle: "dropdown" } %>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to page_i18n('profile'), user_path(current_user), class: "dropdown-item" %>
          <%= link_to action_i18n('logout'), destroy_user_session_path, class: "dropdown-item", method: :delete %>
        </div>
      </li>
    <% else %>
      <li class="nav-item"><%= link_to action_i18n('login'), new_user_session_path, class: "nav-link" %></li>
    <% end %>
  </ul>
</nav>
