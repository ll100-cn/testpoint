<% test_case_dom_id = dom_id(test_case) %>
<div class="card card-collapsed collapsed m-2" data-target="#<%= test_case_dom_id %>" data-toggle="collapse">
  <div class="card-body">
    <div class="card-title">
      <span><%= test_case.title %></span>
      <% test_case.platforms.each do |platform| %>
        <span class="badge" style="background-color: <%= calc_color_hex(platform.name) %>; color: white;"><%= platform.name %></span>
      <% end %>
      <% if test_case.content? %>
        <% content_html = capture do %>
          <div id="<%= test_case_dom_id %>" class="collapse text-muted">
            <div class="py-2">
              <article class="alert alert-warning mb-0">
                <div class="fixed-bottom-wrapper clearfix">
                  <div class="fixed-bottom" style="float: left;">
                    <div class="inner">
                    <%=simple_format test_case.content %>
                    </div>
                  </div>
                </div>
              </article>
            </div>
          </div>
        <% end %>
        <span class="fa fa-fw fa-sticky-note-o text-muted"></span>
      <% end %>
      <%= edit_button [@project, test_case] class: "small", data: { toggle: "modal", target: "#test_case_modal", url: edit_project_test_case_path(@project, test_case, ok_url: request.fullpath) } %>
      <%= destroy_button [@project, test_case], class: "small" %>
    </div>
    <%= content_html %>
  </div>
</div>
