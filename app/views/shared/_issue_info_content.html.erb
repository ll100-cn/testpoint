<div class="card mb-3">
  <div class="card-header d-flex align-items-center">
    工单模版：<%= issue_info.template.name %>
    <span class="ml-3 small text-muted">修改于 <%=l issue_info.updated_at, format: :long %></span>
    <% if can? :edit, issue_info %>
      <div class="dropdown ml-auto dropdown-no-arrow">
        <button class="btn btn-sm dropdown-toggle" data-toggle="dropdown" style="background: transparent;">
          <i class="far fa-ellipsis-h" aria-hidden="true"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-right" style="min-width: 3px;">
          <%= link_to "修改", "javascript:void(0)",
            data: { toggle: "modal", target: "#applicationModal", url: url_for([:edit, @project, @issue, issue_info]) },
            class: "small dropdown-item" if can? :edit, issue_info %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="card-body">
    <div class="no-margin-bottom">
      <% issue_info.inputs.each do |form_input| %>
        <p><%= form_input.label %>: <%= form_input.value %></p>
      <% end %>
    </div>
  </div>

  <% if issue_info.remark.present? %>
    <div class="card-footer">
      备注：<%= issue_info.remark %>
    </div>
  <% end %>
</div>
