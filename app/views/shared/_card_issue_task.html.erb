<% task_dom_id = dom_id(task) %>
<div class="card card-collapsed collapsed border-0" data-target="#<%= task_dom_id %>" data-toggle="collapse">
  <div class="card-body">
    <div class="card-title">
      <% if task.message || task.attachments %>
          <% content_html = capture do %>
            <div id="<%= task_dom_id %>" class="collapse text-muted">
              <div class="py-2">
                <article class="alert alert-light">
                  <div class="fixed-bottom-wrapper clearfix">
                    <div class="fixed-bottom float-left">
                      <div class="inner">
                        <%= render "shared/page_content", content: task.message %>
                      </div>
                    </div>
                  </div>
                  <%= render "shared/attachments_box", attachmentable: task %>
                </article>
              </div>
            </div>
          <% end %>
          <a href="javascript:void(0)" class="text-nowrap"><span ><%= "##{task.id}" %></span></a>
          <span><%= task.test_case.title %></span>
          <span class="badge badge-secondary mx-2"><%= task.platform.name %></span>
          <span class="mr-2"><%= task_state_with_icon(task.state) %></span>
          <span class="text-muted"><%= time_ago_in_words(task.created_at) %></span>
      <% end %>
    </div>
    <%= content_html %>
  </div>
</div>
