<div class="page-header">
  <h2><%=h User %></h2>
</div>

<%= bootstrap_horizontal_form_for [:account, current_user] do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%=h User, :avatar %>
        <hr>
        <% if current_user.avatar.attached? %>
          <%= link_to url_for(current_user.avatar), target: "_blank" do %>
              <%= image_tag url_for(current_user.avatar), class: "img-thumbnail mr-3", size: "200x200" %>
          <% end %>
        <% else %>
          <%= image_tag(current_user.avatar_url) %>
        <% end %>
        <br>

        <%= f.file_field :avatar %>
      </div>
      <div class="col-md-8">
        <%=h User %>-<%= current_user.email %>
        <hr>
        <%= f.input :name %>

        <%= f.actions_content do %>
            <%= ok_url_tag %>
            <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

