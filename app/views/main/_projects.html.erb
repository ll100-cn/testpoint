<div class="card mb-3">
	<div class="card-header d-flex">
		全部项目
	</div>

	<div class="list-group list-group-flush">
		<% projects.each do |project| %>
		<%= link_to project, class: "list-group-item list-group-item-action" do %>

			<div class="d-flex w-100">
				<span class="mb-1">
					<%= project.name %>
				</span>
				<small class="ms-auto">
          共 <span class="badge bg-primary"><%= project.issues.state_filter("opening").count %></span> 个问题待解决
				</small>
			</div>

		<% end %>
		<% end %>
	</div>
	<div class="card-footer x-spacer-2">
		<%= link_to "更多操作", projects_path, class: "text-muted" %>
	</div>
</div>
