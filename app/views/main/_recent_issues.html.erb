<div class="card mb-3">
	<div class="card-header d-flex">
		最近7天 活跃问题
	</div>

	<div class="list-group list-group-flush">
		<% recent_issues.each do |issue| %>
		<%= link_to [issue.project, issue], class: "list-group-item list-group-item-action" do %>

			<div class="d-flex w-100">
			<span class="mb-1">
				<%= issue.title.truncate(23) %>
			</span>
			<small class="ms-auto">
				<span class="badge badge-issue-<%= issue.state %>"><%= issue.state_text %></span>
			</small>
			</div>

			<div class="d-flex w-100">
			<small class="me-1"><b>[<%= issue.project.name %>]</b></small>
			<small><%= issue.creator.name %> 创建</small>
			<small class="ms-auto">最后修改于 <%= time_ago_in_words(issue.updated_at) %> 前</small>
			</div>

		<% end %>
		<% end %>
	</div>
	<div class="card-footer bg-white">
		<%= link_to "查看全部", issues_path, class: "text-muted" %>
	</div>
</div>
