<div class="page-header">
  <h2><%=t "views.page.new", model_name: h(@issue) %></h2>
</div>

<%= bootstrap_horizontal_form_for @issue, url: [@task, @issue] do |f| %>
  <%= f.input :title, input_html: { value: f.object.default_title } %>
  <%= f.input :content, input_html: { rows: 10 } %>

  <%= f.actions_content do %>
    <%= ok_url_tag %>
    <%= f.submit class: "btn btn-primary" %>
    <%= cancel_link [@task, @issue], class: "btn btn-secondary" %>
  <% end %>
<% end %>
