<div class="page-header d-flex">
  <h2><%= page_i18n :index, model_name: h(@issues) %></h2>
  <div class="ml-3 mt-1 actions">
    <%= link_to h(Milestone), milestones_path, class: "btn btn-outline-primary btn-sm" %>
  </div>
</div>

<table class="table">
  <colgroup>
    <col width="40%"/>
    <col width="40%"/>
    <col width="20%"/>
  </colgroup>
  <thead>
    <tr>
      <th><%=h Issue, :title %></th>
      <th><%=h Issue, :content %></th>
      <th><%=h Issue, :state %></th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td>
          <%= link_to issue.title, issue %>
          <% issue.labels.each do |label| %>
              <%= issue_label(label) %>
          <% end %>
        </td>
        <td><%= issue.content %></td>
        <td>
          <span class="<%= issue_state_class_name(issue.state, :badge) %>">
          <%= issue.state.text %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="table-pagination">
  <%= paginate @issues %>
</nav>
