<% file = attachment.file %>
<% blob = ActiveStorage::Blob.find(file.attachment.blob_id) %>
<div class="media border bg-light p-2 align-items-center">
  <div class="mr-2" style="width: 3rem">
    <div class="embed-responsive embed-responsive-1by1">
      <div class="embed-responsive-item embed-responsive-item d-flex align-items-center justify-content-center">
        <% if blob.content_type.split('/')[0] == 'image' %>
          <%= image_tag url_for(file), class: "h-100" %>
        <% else %>
          <%= image_tag 'file.png', class: "h-100" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="media-body d-flex flex-column">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="mb-0"><%= blob.filename.to_s %></h4>
      <%= link_to(content_tag(:i, '',class: 'fa fa-pencil-square-o'), edit_attachment_path(attachment))%>
    </div>
    <div class="small">
      <span class="text-secondary mr-1"><%= number_to_human_size(blob.byte_size, precision: 2, locale: 'en') %></span>
      <%= link_to polymorphic_url(file), class: "clipboard" do %>
        <span class="fa fa-link text-muted small"></span>
      <% end %>
    </div>
  </div>
</div>
