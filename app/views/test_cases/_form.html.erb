<%= bootstrap_horizontal_form_for test_case do |f| %>
  <%= f.input :title %>
  <%= f.input :content, input_html: { rows: 5 } %>
  <%= f.input :component_id, collection: Component.all %>
  <%= f.input :platform_id, collection: Platform.all %>

  <hr>

  <%= f.actions_content do %>
    <%= f.submit class: "btn btn-primary" %>
    <%= cancel_link url_for(action: :index), class: "btn btn-link" %>
  <% end %>
<% end %>
